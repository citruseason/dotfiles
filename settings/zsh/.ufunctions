function killport() {
  kp_target_pid=
  kp_parameter=$(tr '[:lower:]' '[:upper:]' <<< "$1")

  if [[ -z "$kp_parameter" ]]; then
    echo "Please insert PROTOCAL and PORT."; return
  fi

  # check protocol
  if [[ ("$kp_parameter" -eq "TCP" || "$kp_parameter" -eq "UDP")]]; then
    kp_target_port=$2
    kp_target_pid="lsof -i $kp_parameter:$kp_target_port"
  elif [[ "$kp_parameter" =~ "^[0-9]+$" ]]; then
    kp_target_port=$kp_parameter
    kp_target_pid="lsof -i:$kp_target_port"
  fi

  # kill process
  if [[ -z "$kp_target_pid" ]]; then
    echo "The process does not exist. [port: $kp_target_port]"; return
  fi

  # Kill !!!!!
  eval $kp_target_pid | grep LISTEN | awk '{ print $2 }' | xargs kill -9

  echo "Killed [port: $kp_target_port]"
}
